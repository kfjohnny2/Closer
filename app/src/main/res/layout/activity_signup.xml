<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="douche.com.closer.SignupActivity">

    <EditText
        android:id="@+id/edName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="26dp"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:hint="Name"/>
    
    <EditText
        android:id="@+id/edUsernameSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:hint="User"
        android:layout_alignStart="@+id/edName"
        android:layout_below="@+id/edName"
        android:imeOptions="actionNext"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edPassSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edUsernameSignup"
        android:layout_below="@+id/edUsernameSignup"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Password"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/cbAdminSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edPassSignup"
        android:layout_below="@+id/edPassSignup"
        android:layout_marginTop="22dp"
        android:text="Admin?" />

    <Button
        android:id="@+id/btSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbAdminSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Sign up" />
</RelativeLayout>
